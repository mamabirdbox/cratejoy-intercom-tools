%ul
%table.table.table-striped
  %thead
    %tr
      %th #
      %th Customer name
      %th Tracking Number
      %th Box Shipped
      %th Actions
  %tbody
  - @cratejoy_orders.each_with_index do |order, index|
    %tr
      = form_tag '/order' do
        %th{scope: 'row'}= index + 1
        %td.name= order.name
        = hidden_field_tag 'order[name]', order.name
        = hidden_field_tag 'order[customer_id]', order.customer_id
        %td.tracking-number= link_to order.tracking_number, "https://tools.usps.com/go/TrackConfirmAction_input?qtc_tLabels1=#{order.tracking_number}"
        = hidden_field_tag 'order[tracking_number]', order.tracking_number
        %td.box-shipped= select("order", "shipped_box", Box.all.map {|box| [box.name, box.position]})
        %td.actions= submit_tag "Update", class: 'btn btn-success-outline'

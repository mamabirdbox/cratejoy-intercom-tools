%ul
%table.table.table-striped
  %thead
    %tr
      %th #
      %th Customer name
      %th Customer ID
      %th Tracking Number
  %tbody
  - @cratejoy_orders.each_with_index do |order, index|
    %tr
      %th{scope: 'row'}= index + 1
      %td.name= order.name
      %td.customer_id= order.customer_id
      %td.tracking_number= link_to order.tracking_number, "https://tools.usps.com/go/TrackConfirmAction_input?qtc_tLabels1=#{order.tracking_number}"
